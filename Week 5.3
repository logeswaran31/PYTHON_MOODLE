def find_longest_word(sentence):
    words = sentence.split()
    longest_word = ""
    longest_length = 0

    for word in words:
        if len(word) > longest_length:
            longest_word = word
            longest_length = len(word)

    return longest_word, longest_length

# Input sentence
sentence = input()

# Find longest word and its length
longest_word, length = find_longest_word(sentence)

# Print result
print(longest_word)
print(length)
